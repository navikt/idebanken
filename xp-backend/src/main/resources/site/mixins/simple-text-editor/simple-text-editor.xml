<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<mixin xmlns="urn:enonic:xp:model:1.0">
    <display-name>Simple text editor</display-name>
    <form>
        <input name="simpleTextEditor" type="HtmlArea">
            <label>Innhold</label>
            <config>
                <exclude>*</exclude>
                <include>
                    Format TextColor FontSize | JustifyLeft JustifyRight | Bold Italic | Macro Image | BulletedList NumberedList | Undo Redo | Link
                </include>
                <allowHeadings>h2 h3 h4 h5 h6</allowHeadings>
            </config>
        </input>
    </form>
</mixin>
