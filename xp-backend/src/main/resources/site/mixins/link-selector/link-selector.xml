<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<mixin xmlns="urn:enonic:xp:model:1.0">
    <form>
        <option-set name="internalOrExternalLink">
            <label>Lenke-type</label>
            <occurrences minimum="1" maximum="1"/>
            <help-text>Velg intern eller ekstern lenke</help-text>
            <options minimum="1" maximum="1">
                <option name="internalLink">
                    <default>true</default>
                    <label>Intern lenke</label>
                    <items>
                        <input type="ContentSelector" name="contentId">
                            <label>Innhold som skal lenkes til</label>
                            <occurrences minimum="1" maximum="1"/>
                            <config>
                                <allowContentType>^(portal:site|idebanken:)(?!theme-tag)*</allowContentType>
                            </config>
                        </input>
                        <input type="TextLine" name="linkText">
                            <label>Overskriv lenketekst</label>
                            <occurrences minimum="0" maximum="1"/>
                        </input>
                    </items>
                </option>
                <option name="externalLink">
                    <label>Ekstern lenke</label>
                    <items>
                        <input type="TextLine" name="url">
                            <label>URL (https://...)</label>
                            <help-text>Full lenke med https://</help-text>
                            <occurrences minimum="1" maximum="1"/>
                            <config>
                                <regexp>^https:\/\/.*</regexp>
                            </config>
                        </input>
                        <input type="TextLine" name="linkText">
                            <label>Lenketekst</label>
                            <occurrences minimum="0" maximum="1"/>
                        </input>
                    </items>
                </option>
            </options>
        </option-set>
    </form>
</mixin>
