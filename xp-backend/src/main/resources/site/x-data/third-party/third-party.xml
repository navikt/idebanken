<x-data>
    <display-name>Tredjepart</display-name>
    <form>
        <field-set>
            <label>Skyra</label>
            <items>
                <input type="CheckBox" name="ignoreSkyraFromParents">
                    <label>Ikke vis skyra skjema fra foreldre</label>
                </input>
                <option-set name="skyra">
                    <label>Skjema</label>
                    <occurrences minimum="0" maximum="0"/>
                    <options minimum="1" maximum="1">
                        <option name="this">
                            <label>Denne siden</label>
                            <items>
                                <input type="TextLine" name="slug">
                                    <label>Skyra sti (slug)</label>
                                    <help-text>Oppgi skyra sti</help-text>
                                    <occurrences minimum="1" maximum="1"/>
                                </input>
                            </items>
                        </option>
                        <option name="children">
                            <label>Undersider</label>
                            <items>
                                <input type="TextLine" name="slug">
                                    <label>Skyra sti (slug)</label>
                                    <help-text>Oppgi skyra sti</help-text>
                                    <occurrences minimum="1" maximum="1"/>
                                </input>
                                <input type="ContentTypeFilter" name="contentTypes">
                                    <label>Innholdstyper (ingen valgt = alle)</label>
                                    <help-text>Velg hvilke innholdstyper skjemaet skal dukke opp på. Ingen valgt vil
                                        legge på alle typer
                                    </help-text>
                                    <occurrences minimum="0" maximum="0"/>
                                    <config>
                                        <context>true</context>
                                    </config>
                                </input>
                            </items>
                        </option>
                    </options>
                </option-set>
            </items>
        </field-set>
    </form>
</x-data>
