<?xml version="1.0" encoding="UTF-8"?>
<content-type>
    <display-name>Artikkel</display-name>
    <description>Artikkel</description>
    <super-type>base:structured</super-type>
    <is-final>true</is-final>
    <allow-child-content-type>media:image</allow-child-content-type>
    <form>
        <input name="heroImage" type="ImageSelector">
            <label>Hoved artikkelbilde</label>
            <occurrences minimum="0" maximum="1"/>
            <config>
                <allowPath>${site}/ressurser/*</allowPath>
            </config>
        </input>
        <mixin name="title-ingress"/>
        <input type="Tag" name="authors">
            <label>Forfatter(e)</label>
            <occurrences minimum="1" maximum="0"/>
        </input>
        <input type="Date" name="publicationDate">
            <label>Publiseringsdato</label>
            <occurrences minimum="1" maximum="1"/>
            <default>now</default>
        </input>
    </form>
</content-type>
