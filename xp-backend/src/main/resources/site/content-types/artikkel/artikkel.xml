<?xml version="1.0" encoding="UTF-8"?>
<content-type>
    <display-name>Artikkel</display-name>
    <description>Artikkel</description>
    <super-type>base:structured</super-type>
    <is-final>true</is-final>
    <allow-child-content-type>(?!idebanken:crash-course-slide$)(?!idebanken:theme-tag$)(?!idebanken:video)*</allow-child-content-type>
    <form>
        <input name="heroImage" type="ImageSelector">
            <label>Hoved artikkelbilde</label>
            <occurrences minimum="0" maximum="1"/>
            <config>
                <allowPath>${site}/ressurser/*</allowPath>
            </config>
        </input>
        <mixin name="title-ingress"/>
        <mixin name="byline"/>
    </form>
</content-type>
