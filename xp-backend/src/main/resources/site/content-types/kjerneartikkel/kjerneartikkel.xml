<?xml version="1.0" encoding="UTF-8"?>
<content-type>
    <display-name>Kjerneartikkel</display-name>
    <description>Generell innholdstype som dekker det meste av innholdet</description>
    <super-type>base:structured</super-type>
    <is-final>true</is-final>
    <allow-child-content-type>(portal:fragment|${app}:(?!(crash-course-slide|*-tag|singleton-*|video|artikkel)$)*)</allow-child-content-type>
    <form>
        <mixin name="title-ingress" />
        <input type="Tag" name="authors">
            <label>Forfatter(e) / Kilder</label>
            <occurrences minimum="0" maximum="0"/>
        </input>
        <input type="Date" name="publicationDate">
            <label>Oppdateringsdato</label>
            <occurrences minimum="1" maximum="1"/>
            <default>now</default>
        </input>
    </form>
</content-type>
