<?xml version="1.0" encoding="UTF-8"?>
<content-type>
    <display-name>Guide</display-name>
    <description>Guide</description>
    <display-name-expression>${title}</display-name-expression>
    <super-type>base:structured</super-type>
    <is-final>true</is-final>
    <allow-child-content-type>(?!idebanken:crash-course-slide$)(?!idebanken:category$)*</allow-child-content-type>
    <form>
        <mixin name="title-ingress" />
        <input name="description" type="TextArea">
            <label>Kort beskrivelse (brukes i listevisning)</label>
            <config>
                <max-length>100</max-length>  
                <show-counter>true</show-counter>  
            </config>
        </input>
        <mixin name="image" />
        <mixin name="icon-name" />
        <mixin name="icon-background-color" />
    </form>
</content-type>
