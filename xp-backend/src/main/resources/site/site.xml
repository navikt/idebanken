<?xml version="1.0" encoding="UTF-8"?>
<site xmlns="urn:enonic:xp:model:1.0">
    <x-data name="tags" allowContentTypes="^${app}:kjerneartikkel$" optional="false"/>
    <x-data name="aktuelt-tags" allowContentTypes="^${app}:artikkel$" optional="false"/>
    <x-data name="meta" allowContentTypes="^${app}:.*" optional="true"/>

    <form>
        <item-set name="skyra">
            <label>Globale skyra skjema</label>
            <help-text>
                Bruk denne hvis du skal styre hvor skjema skal dukke opp fra skyra. Ellers bruk skyra parten
            </help-text>
            <occurrences minimum="1" maximum="1"/>
            <items>
                <input type="TextLine" name="slugs">
                    <label>Skyra sti (slug)</label>
                    <occurrences minimum="0" maximum="0"/>
                </input>
            </items>
        </item-set>
        <item-set name="alertBanner">
            <label>Info banner</label>
            <occurrences minimum="0" maximum="1"/>
            <items>
                <input type="HtmlArea" name="text">
                    <label>Tekst</label>
                    <occurrences minimum="1" maximum="1"/>
                    <config>
                        <exclude>*</exclude>
                        <include>
                            Bold Italic | Undo Redo RemoveFormat | Link
                        </include>
                    </config>
                </input>
                <input type="ComboBox" name="status">
                    <label>Status</label>
                    <occurrences minimum="1" maximum="1"/>
                    <config>
                        <option value="announcement">Info</option>
                        <option value="warning">Advarsel</option>
                        <option value="error">Feil</option>
                        <option value="success">Suksess</option>
                    </config>
                    <default>announcement</default>
                </input>
                <input type="CheckBox" name="closeable">
                    <label>Lukkbar</label>
                </input>
            </items>
        </item-set>
        <item-set name="searchConfig">
            <label>Søkekonfigurasjon</label>
            <occurrences minimum="1" maximum="1"/>
            <items>
                <item-set name="defaultKeys">
                    <label>Standard-felter</label>
                    <help-text>Ved flere valg brukes første felt som er definert på innholdet</help-text>
                    <occurrences minimum="1" maximum="1"/>
                    <items>
                        <input name="titleKey" type="TextLine">
                            <label>Felter for tittel</label>
                            <occurrences minimum="1" maximum="0"/>
                        </input>
                        <input name="ingressKey" type="TextLine">
                            <label>Felter for ingress</label>
                            <occurrences minimum="0" maximum="0"/>
                        </input>
                        <input name="textKey" type="TextLine">
                            <label>Felter for innhold</label>
                            <occurrences minimum="0" maximum="0"/>
                        </input>
                    </items>
                </item-set>
                <item-set name="contentGroups">
                    <label>Oppsett for innholdstyper</label>
                    <occurrences minimum="0" maximum="0"/>
                    <items>
                        <input name="name" type="TextLine">
                            <label>Navn på denne gruppen</label>
                        </input>
                        <input name="contentTypes" type="ContentTypeFilter">
                            <label>Velg innholdstyper for denne gruppen</label>
                            <occurrences minimum="1" maximum="0"/>
                        </input>
                        <item-set name="groupKeys">
                            <label>Oppsett av felter (overstyrer standard-oppsett)</label>
                            <help-text>Ved flere valg brukes første felt som er definert på innholdet</help-text>
                            <occurrences minimum="0" maximum="1"/>
                            <items>
                                <input name="titleKey" type="TextLine">
                                    <label>Felter for tittel</label>
                                    <occurrences minimum="0" maximum="0"/>
                                </input>
                                <input name="ingressKey" type="TextLine">
                                    <label>Felter for ingress</label>
                                    <occurrences minimum="0" maximum="0"/>
                                </input>
                                <input name="textKey" type="TextLine">
                                    <label>Felter for innhold</label>
                                    <occurrences minimum="0" maximum="0"/>
                                </input>
                            </items>
                        </item-set>
                    </items>
                </item-set>
                <input type="ContentSelector" name="excludeContentAndChildren">
                    <label>Ekskluder innhold og alle barn fra internsøk og lister</label>
                    <occurrences minimum="0" maximum="0"/>
                </input>
                <input type="ContentSelector" name="excludeContent">
                    <label>Ekskluder enkeltinnhold fra internsøk og lister</label>
                    <occurrences minimum="0" maximum="0"/>
                </input>
                <input type="ContentSelector" name="searchPage">
                    <label>Side for søk</label>
                    <occurrences minimum="1" maximum="1"/>
                </input>
            </items>
        </item-set>
        <item-set name="header">
            <label>Header</label>
            <occurrences minimum="1" maximum="1"/>
            <items>
                <mixin name="link-groups"/>
                <item-set name="linksBottom">
                    <label>Lenker nederst i meny</label>
                    <occurrences minimum="0" maximum="0"/>
                    <items>
                        <mixin name="link-selector"/>
                    </items>
                </item-set>
            </items>
        </item-set>
        <item-set name="footer">
            <label>Footer</label>
            <occurrences minimum="1" maximum="1"/>
            <items>
                <field-set>
                    <label>Nyhetsbrev</label>
                    <items>
                        <input type="TextLine" name="newsletterSubscribeText">
                            <label>Tekst</label>
                        </input>
                        <mixin name="link-selector"/>
                    </items>
                </field-set>
                <input type="HtmlArea" name="footerText">
                    <label>Footer tekst</label>
                    <config>
                        <exclude>*</exclude>
                    </config>
                </input>
                <mixin name="link-groups"/>
            </items>
        </item-set>
        <input type="HtmlArea" name="cookieInfoText">
            <label>CookieText</label>
            <config>
                <exclude>*</exclude>
                <include>
                    Format | Bold Italic | Undo Redo RemoveFormat | Link
                </include>
                <allowHeadings>h2</allowHeadings>
            </config>
        </input>
    </form>
    <mappings>
    </mappings>
</site>
