<macro>
    <display-name>Fremhevet boks</display-name>
    <description>En boks for Ã¥ fremheve lenker eller innhold</description>

    <form>
        <mixin name="icon"/>
        <input type="TextLine" name="title">
            <label>Tittel</label>
            <occurrences minimum="1" maximum="1"/>
        </input>
        <mixin name="brand-color" />
        <input type="TextArea" name="body">
            <label>Innhold</label>
            <occurrences minimum="0" maximum="1"/>
        </input>
        <input type="ContentSelector" name="links">
            <label>Interne lenker</label>
            <occurrences minimum="0" maximum="0"/>
        </input>
        <input type="TextLine" name="linksAbsolute">
            <label>Eksterne lenker</label>
            <help-text>Full lenke med https:// - kan overskrive lenketekst med (En lenke)(https://lenke.no)</help-text>
            <occurrences minimum="0" maximum="0"/>
            <config>
                <regexp>^(https:\/\/.*|\([^)]+\)\(https:\/\/.*\))$</regexp>
            </config>
        </input>
    </form>
</macro>
