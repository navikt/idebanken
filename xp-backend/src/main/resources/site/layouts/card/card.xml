<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<layout xmlns="urn:enonic:xp:model:1.0">
    <display-name>Kort</display-name>
    <description>Kort som kan kobles til innholdsfortegnelse</description>
    <form>
        <input type="TextLine" name="prefix">
            <label>Heading prefix (f. eks 1, A eller I)</label>
        </input>
        <input type="TextLine" name="heading">
            <label>Heading text</label>
        </input>
        <option-set name="highlightedLayout">
            <label>Fremhevet / normal</label>
            <occurrences minimum="1" maximum="1"/>
            <options minimum="1" maximum="1">
                <option name="shadow">
                    <label>Fremhevet (skygge)</label>
                    <help-text>Legger til skygge</help-text>
                    <items>
                        <mixin name="heading-color"/>
                    </items>
                    <default>true</default>
                </option>
                <option name="plain">
                    <label>Normal</label>
                </option>
            </options>
        </option-set>
        <mixin name="background-color"/>
        <mixin name="padding-y"/>
        <mixin name="override-width"/>
        <input name="centerHalfWidth" type="CheckBox">
            <label>Vis p√• 1/2 sjermbredde og sentrert</label>
        </input>
        <mixin name="alignment"/>
    </form>
    <regions>
        <region name="content"/>
    </regions>
</layout>
