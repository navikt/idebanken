<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<layout xmlns="urn:enonic:xp:model:1.0">
    <display-name>2 columns</display-name>
    <description>Provides left and right regions</description>
    <form>
        <mixin name="background-color"/>
        <mixin name="box-color"/>
        <mixin name="padding-y"/>
        <mixin name="override-width"/>
        <input name="leftSpan" type="ComboBox">
            <label>Venstre Kolonne - Bredde</label>
            <occurrences minimum="1" maximum="1"/>
            <config>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6 (50%)</option>
                <option value="7">7</option>
                <option value="8">8</option>
                <option value="9">9</option>
                <option value="10">10</option>
                <option value="11">11</option>
            </config>
            <default>6</default>
        </input>
        <input name="breakLeftFirst" type="CheckBox">
            <label>Venstre kolonne øverst for mobilvisning</label>
            <help-text>Vis innholdet i venstre kolonne øverst for mobilvisning</help-text>
            <default>checked</default>
        </input>
        <mixin name="alignment"/>
        <input name="separator" type="CheckBox">
            <label>Vis separator mellom kolonner</label>
            <default>unchecked</default>
        </input>
    </form>
    <regions>
        <region name="left"/>
        <region name="right"/>
    </regions>
</layout>
