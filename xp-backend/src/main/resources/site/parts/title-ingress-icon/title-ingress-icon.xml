<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<part xmlns="urn:enonic:xp:model:1.0">
    <display-name>Tittel og ingress med ikon</display-name>
    <description>Visning av tittel og ingress med ikon</description>
    <form>
        <input name="bgColor" type="ComboBox">
            <label>Tittel bakgrunsfarge</label>
            <occurrences minimum="0" maximum="1"/>
            <config>
                <option value="bg-white">Hvit</option>
                <option value="bg-extra-light-pink">Ekstra lys rosa</option>
                <option value="bg-light-pink">Lys rosa</option>
                <option value="bg-pink">Rosa</option>
                <option value="bg-dark-blue">Mørk blå</option>
            </config>
            <default>bg-light-pink</default>
        </input>
        <input name="showType" type="CheckBox">
            <label>Vis dokumenttype</label>
            <default>checked</default>
        </input>
    </form>
    <config>
        <allow-on-content-type>idebanken:guide</allow-on-content-type>
        <allow-on-content-type>idebanken:virkemiddel</allow-on-content-type>
        <allow-on-content-type>portal:page-template</allow-on-content-type>
    </config>
</part>
