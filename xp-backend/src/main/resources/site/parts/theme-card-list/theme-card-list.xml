<?xml version="1.0" encoding="UTF-8"?>
<part xmlns="urn:enonic:xp:model:1.0">
    <display-name>Temakort liste</display-name>
    <description>Viser en sortert liste med innhold tagget med et gitt tema</description>
    <form>
        <input name="pageSize" type="Long">
            <label>Antall artikler per last</label>
            <occurrences minimum="1" maximum="1"/>
            <default>6</default>
        </input>
    </form>
    <config>
        <allow-on-content-type>${app}:theme-tag</allow-on-content-type>
    </config>
</part>
