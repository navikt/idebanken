<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<part xmlns="urn:enonic:xp:model:1.0">
    <display-name>Button</display-name>
    <description>Link buttons</description>
    <form>
        <option-set name="blockOptionSet">
            <label>Select link button type</label>
            <occurrences minimum="1" maximum="1"/>  
            <help-text>Create internal or external button link</help-text>
            <options minimum="1" maximum="1">   
                <option name="internalLink">
                    <label>Internal URL</label>
                    <items>
                        <input name="ideBankContentSelector" type="ContentSelector">
                            <label>Select content</label>
                            <occurrences minimum="0" maximum="1"/>
                            <config>
                                <allowPath>${site}/*</allowPath>
                            </config>
                        </input> 
                    </items>
                </option>
                <option name="externalLink">
                    <label>External URL</label> 
                    <items> 
                        <input type="TextLine" name="url">
                            <label>Paste in URL</label>
                        </input>
                    </items>
                </option>
            </options>
        </option-set>

        <input type="TextLine" name="text">
            <label>Button text</label>
        </input>
        <input type="ComboBox" name="variant">
            <label>Button variant</label>
            <occurrences minimum="1" maximum="1"/>  
            <config>
                <option value="primary">Primary</option>  
                <option value="secondary">Secondary</option>
                <option value="tertiary">Tertiary</option>
            </config>
            <default>primary</default>  
        </input>
        <input type="ComboBox" name="size">
            <label>Button size</label>
            <occurrences minimum="1" maximum="1"/>  
            <config>
                <option value="medium">Medium</option>  
                <option value="small">Small</option>
                <option value="xsmall">XSmall</option>
            </config>
            <default>medium</default>  
        </input>
    </form>
</part>