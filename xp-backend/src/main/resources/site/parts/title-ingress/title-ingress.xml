<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<part xmlns="urn:enonic:xp:model:1.0">
    <display-name>Tittel og ingress</display-name>
    <description>Visning av tittel og ingress</description>
    <form>
        <input type="ComboBox" name="displayType">
            <label>Visning</label>
            <occurrences minimum="1" maximum="1"/>
            <config>
                <option value="icon">Med ikon</option>
                <option value="standard">Vanlig</option>
            </config>
            <default>standard</default>
        </input>
        <input name="bgColor" type="ComboBox">
            <label>Tittel bakgrunsfarge</label>
            <occurrences minimum="0" maximum="1"/>
            <config>
                <option value="bg-white">Hvit</option>
                <option value="bg-extra-light-pink">Ekstra lys rosa</option>
                <option value="bg-light-pink">Lys rosa</option>
                <option value="bg-pink">Rosa</option>
                <option value="bg-dark-blue">Mørk blå</option>
            </config>
        </input>
        <input name="showType" type="CheckBox">
            <label>Vis dokumenttype</label>
        </input>
    </form>
</part>
