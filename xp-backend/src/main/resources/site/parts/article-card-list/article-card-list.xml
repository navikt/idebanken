<?xml version="1.0" encoding="UTF-8"?>
<part xmlns="urn:enonic:xp:model:1.0">
    <display-name>Artikkelkort liste</display-name>
    <description>Viser en liste med artikler i kortformat.</description>
    <form>
        <input name="pageSize" type="Long">
            <label>Antall artikler per last</label>
            <occurrences minimum="1" maximum="1"/>
            <default>6</default>
        </input>
    </form>
    <config>
        <allow-on-content-type>(portal:page-template|${app}:singleton-aktuelt-page)</allow-on-content-type>
    </config>
</part>
