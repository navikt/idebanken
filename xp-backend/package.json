{
  "devDependencies": {
    "@enonic-types/global": "7.15.1",
    "@enonic-types/lib-cluster": "7.15.1",
    "@enonic-types/lib-content": "7.15.1",
    "@enonic-types/lib-context": "7.15.1",
    "@enonic-types/lib-export": "7.15.1",
    "@enonic-types/lib-event": "7.15.1",
    "@enonic-types/lib-node": "7.15.1",
    "@enonic-types/lib-portal": "7.15.1",
    "@enonic-types/lib-project": "7.15.1",
    "@enonic-types/lib-task": "7.15.1",
    "@item-enonic-types/global": "7.15.0",
    "@item-enonic-types/lib-http-client": "3.2.2",
    "@eslint/js": "^9.28.0",
    "@swc/core": "1.11.29",
    "browser-sync": "3.0.4",
    "concurrently": "8.2.2",
    "esbuild-plugin-globals": "^0.2.0",
    "esbuild-sass-plugin": "^3.3.1",
    "eslint": "^9.28.0",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "glob": "10.4.5",
    "prettier": "^3.5.3",
    "rimraf": "5.0.10",
    "sass": "^1.89.1",
    "tsup": "8.3.5",
    "typescript-eslint": "^8.33.1"
  },
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "clean": "rimraf build",
    "build": "concurrently -c auto -g --timings npm:build:*",
    "build:sass": "npx sass src/main/resources/assets/styles:build/resources/main/assets/styles",
    "build:server": "npx tsup -d build/resources/main",
    "build:static": "npx tsup -d build/resources/main/static",
    "check": "concurrently -c auto -g --timings npm:lint && echo 'npm:check:types is turned off. TODO: activate it again'",
    "check:types": "concurrently -g -r --timings npm:check:types:*",
    "check:types:server": "npx tsc --noEmit",
    "check:types:static": "npx tsc --noEmit -p src/main/resources/static/tsconfig.json",
    "lint": "eslint",
    "minify": "concurrently -c auto -g --timings 'npm:build:sass -- --style compressed' 'npm:build:server -- --minify' 'npm:build:static -- --minify'",
    "watch": "concurrently -c auto npm:watch:*",
    "watch:browserSync": "npx browser-sync start --files \"src/main/resources/**/*.html\" \"src/main/resources/**/*.xml\" \"build/resources/main\" --reload-delay 0 --port 3100 --no-snippet --watch",
    "watch:sass": "npm run build:sass -- --watch",
    "watch:server": "npm run build:server -- --watch",
    "watch:static": "npm run build:static -- --watch",
    "test": "npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/navikt/idebanken.git"
  },
  "keywords": [
    "idébanken",
    "idebanken",
    "enonic",
    "xp",
    "cms"
  ],
  "author": "Idébanken",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/navikt/idebanken/issues"
  },
  "homepage": "https://idebanken.org",
  "engines": {
    "node": ">= 20.10.0",
    "npm": ">= 10.2.3"
  }
}
