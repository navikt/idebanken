{
    "name": "nextxp-template",
    "version": "3.0.0",
    "license": "Apache-2.0",
    "private": true,
    "scripts": {
        "predev": "npm run generate-gql-types",
        "dev": "concurrently 'next dev' 'npm run prettier-watch'",
        "prod": "npm run build && npm run start",
        "start": "next start -p 4242",
        "build": "next build",
        "build-skip-ssg": "export SKIP_SSG=\"true\" && next build",
        "prettier-watch": "onchange \"src/*\" -- prettier --write --ignore-unknown {{changed}}",
        "generate-gql-types": "graphql-codegen",
        "lint": "next lint",
        "test": "echo \"no tests yet! :O\""
    },
    "dependencies": {
        "@enonic/nextjs-adapter": "^3.2.2",
        "@navikt/ds-css": "^8.6.0",
        "@navikt/ds-react": "^8.6.0",
        "@tailwindcss/postcss": "^4.2.1",
        "classnames": "^2.5.1",
        "domhandler": "^5.0.3",
        "framer-motion": "^12.24.10",
        "html-react-parser": "^5.2.11",
        "next": "15.5.9",
        "next-themes": "^0.4.6",
        "postcss": "^8.5.6",
        "react": "18.3.1",
        "react-dom": "18.3.1",
        "tailwindcss": "^4.2.1",
        "unescape": "^1.0.1",
        "valibot": "^1.2.0"
    },
    "devDependencies": {
        "@graphql-codegen/cli": "^6.1.0",
        "@graphql-codegen/client-preset": "^5.2.2",
        "@graphql-codegen/typescript": "^5.0.7",
        "@graphql-codegen/typescript-operations": "^5.0.7",
        "@navikt/aksel-stylelint": "^8.6.0",
        "@types/node": "^25.0.3",
        "@types/react": "18.3.1",
        "@types/react-dom": "18.3.1",
        "@typescript-eslint/eslint-plugin": "^8.52.0",
        "@typescript-eslint/parser": "^8.52.0",
        "concurrently": "^9.2.1",
        "eslint": "9.27.0",
        "eslint-config-next": "15.3.2",
        "eslint-config-prettier": "^10.1.8",
        "onchange": "^7.1.0",
        "prettier": "^3.8.1",
        "stylelint": "^17.3.0",
        "typescript": "5.8.3"
    }
}
